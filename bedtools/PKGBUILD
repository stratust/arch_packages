# Maintainer: Thiago Yukio Kikuchi Oliveira <stratust@gmail.com>
pkgname=bedtools
pkgver=2.18.2
pkgrel=1
pkgdesc="bedtools: a flexible suite of utilities for comparing genomic features."
arch=('i686' 'x86_64')
url="https://github.com/arq5x/bedtools2"
license=('GPL')
source=(https://github.com/arq5x/bedtools2/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=(d61a04452c9ad8eba586c0e4958df98d)
#install='bedtools.install'

build() {
		cd $srcdir/bedtools-$pkgver
		export BEDTOOLS_LOCATION=/usr/bin
		make
}

check() {
		cd $srcdir/bedtools-$pkgver
		make test
}

package() {
		cd $srcdir/bedtools-$pkgver/bin
		install -d $pkgdir$BEDTOOLS_LOCATION
		install * $pkgdir$BEDTOOLS_LOCATION
}
